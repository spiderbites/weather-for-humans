# A sample Gemfile
source "https://rubygems.org"

gem 'rake'
gem 'activesupport'

gem 'sinatra'
gem 'sinatra-contrib'
gem 'sinatra-activerecord'

gem 'puma'
gem 'tux'


# wrapper for open weather
gem 'open-weather'

# geonames for timezone
gem 'geonames_api'

gem 'rack'
gem 'sass'
gem 'json'

group :development, :test do
  gem 'rspec'
  gem 'pry'
  gem 'pry-nav'
  gem 'shotgun'
  gem 'sqlite3'
end

group :production do
  gem 'pg'
end